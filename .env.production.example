# Production Environment Variables
# Copy this file to .env.production.local and fill in your production values

# Database
DATABASE_URL="your-production-database-url"

# JWT Secret for admin authentication
JWT_SECRET="your-super-secure-jwt-secret-in-production"

# Admin credentials
ADMIN_USERNAME="admin"
ADMIN_PASSWORD_HASH="your-hashed-admin-password"

# Email configuration (if using email features)
# EMAIL_FROM="noreply@yourdomain.com"
# EMAIL_SERVICE_CONFIG="your-email-service-config"

# Next.js
NEXTAUTH_URL="https://yourdomain.com"
NEXTAUTH_SECRET="your-nextauth-secret"

# Debug settings (should be false in production)
DEBUG_MODE="false"
NEXT_PUBLIC_DEBUG_MODE="false"

# Performance and security
NODE_ENV="production"
